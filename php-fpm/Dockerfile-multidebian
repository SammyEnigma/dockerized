# This file might be outdated, see https://github.com/eilandert/dockerized/tree/master/php-fpm for a recent one
FROM    eilandert/debian-base:stable
LABEL   maintainer="Thijs Eilander <eilander@myguard.nl>"
ENV     DEBIAN_FRONTEND="noninteractive"
ENV     TZ=Europe/Amsterdam
ENV	PHPVERSION=MULTI
ENV	MODE=MULTI

COPY    bootstrap.sh /bootstrap.sh
ADD	composer-setup.php /tmp/composer-setup.php

RUN set -x ;\
    echo "deb [trusted=yes] http://packages.sury.org/php/ ${DIST} main" > /etc/apt/sources.list.d/ondrej-ppa.list ;\
    apt-get -y update ;\
    apt-get install -y nullmailer mailutils ;\
    rm -rf /var/spool/nullmailer/trigger ;\
    apt-get -y autoremove && apt-get -y autoclean ;\
    rm -rf /var/lib/apt/lists/*

RUN set -x ;\
    apt-get update ;\
    apt-get install -y --no-install-recommends \
      php5.6 \
      php5.6-fpm \
      php5.6-apcu \
      php5.6-bcmath \
      php5.6-cli \
      php5.6-curl \
