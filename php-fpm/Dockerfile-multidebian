      php5.6-imagick \
      php5.6-imap \
      php5.6-intl \
      php5.6-json \
      php5.6-ldap \
      php5.6-mcrypt \
      php5.6-memcache \
      php5.6-memcached \
      php5.6-mbstring \
      php5.6-mysql \
      php5.6-opcache \
      php5.6-pspell \
      php5.6-pgsql \
      php5.6-readline \
      php5.6-recode \
      php5.6-redis \
      php5.6-soap \
      php5.6-sqlite \
      php5.6-tidy \
      php5.6-xml \
      php5.6-zip ;\
    apt-get -y autoremove && apt-get -y autoclean ;\
    rm -rf /var/lib/apt/lists/*

