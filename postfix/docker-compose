services:
  postfix:
    container_name: postfix
    image: eilandert/postfix:latest
    ports:
    - 25:25/tcp
    - 587:587/tcp
    restart: always
    volumes:
    - ./config:/etc/postfix:rw
    - /var/log/postfix:/var/log
#    - /etc/letsencrypt:/etc/letsencrypt:ro
    environment:
      - TZ=Europe/Amsterdam

version: '3.7'

